
		<div id="header">
			<h1 id="logo"><a href="recruiter-signin.html" title="GLC - Get Live Consulting Inc">GLC - Get Live Consulting Inc</a></h1>
			<h2 class="mainText">Get Live Recruitment Center</h2>
		</div>
		<div class="container">
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			<ul class="signInBox">
				<li>
					
					<%= f.email_field :email, :placeholder => 'Username', :class => "inputText", :onclick=>"if(this.value=='Username'){this.value=''}" , :onblur=>"if(this.value==''){this.value='Username'}"  %>
				</li>
				<li>
					
					<%= f.password_field :password, :placeholder => "Password", :class => "inputText", :onclick=>"if(this.value=='Password'){this.value=''}", :onblur =>"if(this.value==''){this.value='Password'}" %>
				</li>
				<li>
					<div class="signInBtn">
					
						<%= f.submit "Sign In", :class => 'signText' %>
					</div>
				</li>
				<div>
					<label class="label_check" for="sample-check">
						<input name="sample-check" id="sample-check" value="1" type="checkbox" />
						Remember me </label>

				</div>
				<div>
					<a href="#" title="Forgot your password?" class="pwLink">Forgot your password?</a>
				</div>
			</ul>
			<% end %>
		</div>
		<div class="cl"></div>
		<div id="mainfooter">
			<div class="footer">
				<div class="copyRight">
					&copy; Copyright 2013 Get Live. All rights reserved.
				</div>
			</div>
		</div>
	

