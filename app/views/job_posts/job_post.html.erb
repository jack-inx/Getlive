<%= form_for @job_post, :url => create_job_path(@job_post) do |f| %>
<div class="field">
	<%= f.label :job_title %>
	<br />
	<%= f.text_field :job_title %>
</div>
<div class="field">
	<%= f.label :position %>
	<br />
	<%= f.text_field :position %>
</div>
<div class="field">
	<%= f.label :country %>
	<br />
	<%= f.text_field :country %>
</div>
<div class="field">
	<%= f.label :state %>
	<br />
	<%= f.text_field :state %>
</div>
<div class="field">
	<%= f.label :city %>
	<br />
	<%= f.text_field :city %>
</div>
<%#*
<div class="field">
	%>
	<%#= f.label :start_date %>
	<%#= f.date_select :start_date %>
	<%#*
</div>
%>
<div class="field">
	<%= f.label :zip_code %>
	<br />
	<%= f.text_field :zip_code %>
</div>
<div class="field">
	<%= f.label :salary %>
	<br />
	<%= f.text_field :salary %>
</div>
<div class="field">
	<%= f.label :term_of_assignment %>
	<br />
	<%= f.text_field :term_of_assignment %>
</div>
<div class="field">
	<%= f.label :length %>
	<br />
	<%= f.text_field :length %>
</div>
<div class="field">
	<%= f.label :job_description %>
	<br />
	<%= f.text_field :job_description %>
</div>
<div class="field">
	<%= f.fields_for :job_post_and_skills do |skill| %>
	<%= skill.label :skill_name %>
	<br/>
	<%= skill.collection_select(:id, Skill.all,:id,:name, :prompt => "Please select skill") %>
	<%#= skill.text_field :name %>
	<% end %>
</div>
<div class="actions">
	<%= f.submit %>
</div>
<% end %>